<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Pierre's Catering</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <link href="~/css/styles.css" rel="stylesheet" type="text/css">
  </head>
  <body>
    <div class="navbar">
      <nav>
        <img src="~/img/logo.png" alt="bakery logo" class="bakery-logo">
        <ul>
          <li><a href='/'>BACK TO THE HOME PAGE</a></li>
          <li><a href="/vendors">BACK TO VENDORS PAGE</a></li>
          <li><a href="https://www.youtube.com/watch?v=dQw4w9WgXcQ">CLICK HERE</a></li>
        </ul>
      </nav>
    </div>
    <div class="container">
      @using Bakery.Models;

      <h1>Vendor Details</h1>

      <h3>Here are all the orders for this vendor:</h3>

      <div>
        <ol>
        @foreach (Order order in @Model["orders"])
        {
          <li class="description"><a href='/vendors/@Model["vendor"].Id/orders/@order.Id'>@order.Description</a></li>
        }
        </ol>
      </div>

      <div>
        <p><a href='/vendors/@Model["vendor"].Id/orders/new'>Add a new order for this vendor</a></p>
      </div>
    </div>
  </body>
</html>