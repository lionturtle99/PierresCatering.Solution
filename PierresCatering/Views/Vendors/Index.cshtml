<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>My To-Do List!</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <link href="~/css/styles.css" rel="stylesheet" type="text/css">
  </head>
  <body>
    <div class="navbar">
      <nav>
        <img src="~/img/logo.png" alt="bakery logo" class="bakery-logo">
        <ul>
          <li><a href='/'>BACK TO THE HOME PAGE</a></li>
          <li><a href="https://www.youtube.com/watch?v=dQw4w9WgXcQ">CLICK HERE</a></li>
        </ul>
      </nav>
    </div>
    <div class="contaier">
      @using Bakery.Models;

      <h1>Vendors</h1>

      @if (@Model.Count == 0)
      {
        <h3>No vendors have been added yet!</h3>
      } 

      @foreach (Vendor vendor in Model)
      {
        <h3><a href='/vendors/@vendor.Id'>@vendor.Name</a></h3>
      }
    </div>
  </body>
</html>